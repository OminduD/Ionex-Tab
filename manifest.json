{
    "manifest_version": 3,
    "name": "Ionex Tab - Enhanced New Tab",
    "version": "1.0.0",
    "description": "A feature-rich, customizable new tab page with widgets, AI assistance, and beautiful themes.",
    "chrome_url_overrides": {
        "newtab": "index.html"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://api.openweathermap.org/*",
        "https://generativelanguage.googleapis.com/*"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}